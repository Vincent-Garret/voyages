{% extends "base.html.twig" %}

{% block body %}



<div class="register d-flex align-items-stretch flex-column">
    <div class=" trip_form">
        {{ form_start(registrationForm) }}
        <div>{{form_label(registrationForm.username) }}</div>
            {{form_widget(registrationForm.username) }}
            {{form_errors(registrationForm) }}


        <div>{{form_label(registrationForm.password) }}</div>
            {{form_widget(registrationForm.password) }}
            {{form_errors(registrationForm.password) }}

            {{form_label(registrationForm.acceptance) }}
            {{form_widget(registrationForm.acceptance) }}
            {{form_errors(registrationForm.acceptance) }}


        <div class="wrap">
            <input type="hidden" id="recaptchaResponse" name="recaptcha-response">
            {{form_widget(registrationForm.submit, {'attr' : { 'class' : 'button my-5'}}) }}
        </div>
        {{ form_end(registrationForm) }}
        {% for message in app.flashes('port') %}
            <div class="text-danger">
                {{ message }}
            </div>
        {% endfor %}
    
    </div>
</div>

{% endblock %}