{% extends "base.html.twig" %}

{% block body %}

    {% for trip in user.trips %}
            {% if trip.image %}
                <div class="row align-items-center mr-0 trip my-3 pb-1 ml-1 mr-1">
                    <div class="col-6"><img src="{{asset('img/'~ trip.image) }}" alt="image de test" class="img-fluid"></div>
                    <div class="col-6">                    
                        <div><img src="{{asset('img/comma_white.png') }}" alt="image reprÃ©sentant des virgules pour le style" class="img-fluid col-2 mb-5"> </div>
                        <p class="poetry">"{{ trip.poetry | nl2br}}"</p>
                        <p class="author">{{ trip.author }}</p>
                        <p class="user"> by <a href="{{ path('trips') }}"> {{ trip.user.userName }}</a></p>
                    </div>
                </div>
            {% endif %}
        <hr>
    {% endfor %}

{% endblock %}