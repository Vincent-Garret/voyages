{% extends "base.html.twig" %}

{% block body %}

    <div class="row justify-content-center">
        <a href="{{ path('insert') }}">Créer un voyage</a>
    </div>

    {% if app.user.trips != null %}
        <p>Bienvenue {{ app.user.username }}. Commencer à créer vos voyages en cliquant sur le bouton si dessus</p>
    {% endif %}
    {% for trip in trips %}
        {% if trip.user == app.user %} 
                {% if trip.image %}
                    <div class="row align-items-center mr-0 trip">
                        <div class="col-6"><img src="{{asset('img/'~ trip.image) }}" alt="image de test" class="img-fluid"></div>
                        <div class="col-6">
                            <p class="poetry">"{{ trip.poetry | nl2br }}"</p>
                            <p class="author">{{ trip.author }}</p>
                        </div>
                        <div class="container-fluid">
                            <a href="{{ path('delete', {'id' : trip.id }) }}" class="col-6"> Supprimer le voyage</a>
                            <a href="{{ path('update', {'id' : trip.id }) }}"> Modifier le voyage</a>
                        </div>
                    </div>
                {% endif %}
        {% endif %}
    {% endfor %}
{% endblock %}
